extends ../layout

block content
  .container
    h1.page-header 회원가입
    form(action='/users', method='POST')
      .form-group
        label(for='first') First Name
        input.form-control(type='text', id='first', name='first', placeholder='Your first name')
      .form-group
        label(for='last') Last Name
        input.form-control(type='text', id='last', name='last', placeholder='Your last name')        
      .form-group
        label(for='email') Email address
        input.form-control(type='email', id='email', name='email', placeholder='Email')
      .form-group
        label(for='password') Password
        input.form-control(type='password', id='password', name='password', placeholder='Password')

      div.form-actions
        a.btn.btn-default(href='javascript:window.history.back();') 뒤로 
        | 
        button.btn.btn-primary(type='submit') 회원가입 
